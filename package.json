{
  "private": true,
  "workspaces": [
    "app",
    "packages/*"
  ],
  "license": "MIT",
  "scripts": {
    "format": "lerna exec --stream --parallel -- prettier-eslint --write \"**/*.js\"",
    "clean:pkg": "lerna exec --stream --parallel --ignore app -- rimraf dist lib",
    "babel:pkg": "cross-env BABEL_ENV=babel lerna exec --stream --parallel --ignore app -- babel src --out-dir lib",
    "rollup:pkg": "cross-env BABEL_ENV=rollup lerna exec --stream --parallel --ignore app -- rollup -c ../rollup.config.js",
    "build:pkg": "run-s clean:pkg babel:pkg rollup:pkg",
    "build:app": "cd app && npm run build",
    "build": "run-s build:pkg build:app",
    "start": "cd app && npm start",
    "test": "jest",
    "tdd": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/{src,tests}/**/*.js": [
      "prettier-eslint --write",
      "git add"
    ],
    "app/{src,tests}/**/*.js": [
      "prettier-eslint --write",
      "git add"
    ],
    "tests/**/*.js": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=6",
    "yarn": ">=1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "cross-env": "^5.2.0",
    "eslint": "^4.19.1",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-react": "^7.9.1",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lerna": "^2.11.0",
    "lint-staged": "^7.2.0",
    "npm-run-all": "^4.1.3",
    "prettier-eslint-cli": "^4.7.1",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.60.7",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0"
  }
}
