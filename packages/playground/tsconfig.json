{
  "extends": "../../tsconfig.base.json",
  "include": ["./", "src", "test"],
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client", "jest", "node"]
  },
  "references": [
    { "path": "../antd" },
    { "path": "../bootstrap-4" },
    { "path": "../carbon" },
    { "path": "../chakra-ui" },
    { "path": "../core" },
    { "path": "../fluent-ui" },
    { "path": "../fluentui-rc" },
    { "path": "../material-ui" },
    { "path": "../mui" },
    { "path": "../semantic-ui" },
    { "path": "../utils" },
    { "path": "../validator-ajv6" },
    { "path": "../validator-ajv8" }
  ]
}
